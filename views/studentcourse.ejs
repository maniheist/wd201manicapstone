<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="csrf-token" content="<%= csrfToken %>" />
    <!-- Include Tailwind CSS via CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      integrity="sha384-pzjw4NxyA7ADLlZ0f/DS83I5O7jsDePsC3nmQJw4rISwMx6fe7T9CjQyC9dFO2F21"
      crossorigin="anonymous"
    />

    <title>Course List</title>
  </head>

  <body>
    <div class="min-h-screen bg-gray-100 p-8">
      <div class="max-w-screen-xl mx-auto">
        <!-- Add buttons in a column -->
        <div class="m-4 p-4 text-black-700 text-left">
          <!-- Apply Tailwind CSS classes for styling -->
          <p class="text-4xl font-extrabold text-black-700">
            Welcome <%- a.firstName %>!
          </p>
        </div>

        <br />
        <hr class="h-1 bg-gray-800 shadow-xl my-8" />

        <div class="mt-8">
          <!-- Add a header section with a professional color -->
          <div class="text-3xl font-bold mb-4 text-center text-indigo-700">
            Available Course List
          </div>
        </div>
        <div class="flex flex-grow flex-wrap -mx-4">
          <!-- Create a row of course boxes with a professional light green background -->
          <% for (let pack of packs) { %>
          <div class="w-full md:w-1/2 lg:w-1/3 p-4">
            <div
              class="p-6 bg-green-300 text-gray-800 rounded-lg shadow-md hover:bg-indigo-300 transition duration-300 ease-in-out transform hover:scale-105"
            >
              <div class="text-xl font-bold mb-2">
                <%= pack.heading %>
                <a
                  href="/enroll/<%= pack.id %>"
                  class="enroll-link bg-blue-500 text-white font-semibold px-4 py-2 rounded-lg mb-2 hover:bg-blue-800 transition duration-300 ease-in-out inline-block"
                  >Enroll</a
                >
                <a
                  href="/viewcourses/<%= pack.id %>"
                  class="enroll-link bg-blue-500 text-white font-semibold px-4 py-2 rounded-lg mb-2 hover:bg-blue-800 transition duration-300 ease-in-out inline-block"
                  >Visit</a
                >
              </div>

              <ul>
                <!-- List the chapters -->
                <% for (let users of userss ) { %> <% if (users.id==pack.userId)
                { %>
                <h1 class="text-xl font-semibold mb-2">
                  Author: <%= users.firstName %>
                </h1>
                <% } %> <% } %>
              </ul>

              <% let i=0; for (let enroll of enrolls) { %> <% if
              (pack.id==enroll.courseId) { i++ %> <% } %> <% } %>

              <h1 class="text-xl font-semibold mb-2">
                <i class="fas fa-user-graduate"></i>
                Enrolled Students: <%= i %>
              </h1>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
